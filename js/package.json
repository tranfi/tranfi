{
  "name": "tranfi",
  "version": "0.1.0",
  "description": "Streaming ETL language + runtime",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "tranfi": "src/cli.js"
  },
  "exports": {
    ".": "./src/index.js",
    "./wasm": "./wasm/tranfi_core.js"
  },
  "files": [
    "src/",
    "wasm/",
    "csrc/",
    "napi_api.c",
    "binding.gyp",
    "README.md"
  ],
  "scripts": {
    "prepack": "rm -rf csrc && mkdir -p csrc && cp ../src/*.c ../src/*.h csrc/",
    "install": "node-gyp rebuild 2>/dev/null || true",
    "build:native": "rm -rf csrc && mkdir -p csrc && cp ../src/*.c ../src/*.h csrc/ && node-gyp rebuild",
    "test": "node ../test/test_node.js"
  },
  "keywords": ["etl", "csv", "streaming", "data", "pipeline", "transform"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tranfi/tranfi"
  }
}
